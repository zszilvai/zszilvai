         class="rounded-md border-transparent grayscale border-8 h-1/3 mx-auto">
    <div id="cv-scrollspy" class="sticky-top pl-3 text-sm">
      <ul class="nav nav-pills menu-sidebar cv-spy">
        <li class="nav-item">
          <a class="nav-link" href="#about-me">
            About me
            <p class="text-gray-900">
              Spoken languages: <br/>
              <ul class="text-gray-900">
                <li>
                  <div class="flex">
                    <div class="w-1/3">
                      Hungarian
                    </div>
                    <div class="w-2/3">
                      <div class="w-full bg-gray-200">
                        <div class="bg-blue-600 text-xs font-medium text-blue-100 text-center p-0.5 leading-none rounded-l-full" style="width: 100%">Native</div>
                      </div>
                    </div>
                  </div>
                </li>
                  <div class="flex">
                    <div class="w-1/3">
                      English
                    </div>
                    <div class="w-2/3">
                      <div class="w-full bg-gray-200">
                        <div class="bg-blue-600 text-xs font-medium text-blue-100 text-center p-0.5 leading-none rounded-l-full" style="width: 95%">C1</div>
                      </div>
                    </div>
                  </div>
                </li>
                </li>
                  <div class="flex">
                    <div class="w-1/3">
                      German
                    </div>
                    <div class="w-2/3">
                      <div class="w-full bg-gray-200">
                        <div class="bg-blue-600 text-xs font-medium text-blue-100 text-center p-0.5 leading-none rounded-l-full" style="width: 75%">B2</div>
                      </div>
                    </div>
                  </div>
                </li>
                </li>
                  <div class="flex">
                    <div class="w-1/3">
                      Russian
                    </div>
                    <div class="w-2/3">
                      <div class="w-full bg-gray-200">
                        <div class="bg-blue-600 text-xs font-medium text-blue-100 text-center p-0.5 leading-none rounded-l-full" style="width: 20%">In progress</div>
                      </div>
                    </div>
                  </div>
                </li>
              </ul>
            </p>
          </a>
        </li>
        <%for (item of cv.items.slice().reverse()) { %>
          <li class="py-1">
            <a class="nav-link" href="#<%=item.id%>">
              About <%=item.companyName%>
              <br/>
              <p class="text-gray-900">
                <%= item.companyDescription %>
                <br/>
                Used technologies and skills
                <br/>
                <div>
                  <% for (skill of item.positionSkills.split(',')) { %>
                    <span class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2">
                      <%= skill %>
                    </span>
                  <% } %>
                </div>
              </p>
            </a>

          </li>
        <% } %>
      </ul>
    </div>


  </div>
  <div class="main">
    <div class="max-w-screen-lg mx-auto">


      <div class="border-b border-gray-300">
        <div class="pt-16 pb-8">
          <h1 class="font-semibold text-3xl text-gray-800"><%= site.title %></h1>
          <div class="text-xl"><%= site.description %></div>
        </div>
        <nav>
          <ul class="flex flex-wrap text-xl">
            <li class="mr-6">
              <a class="text-gray-700 border-none hover:no-underline hover:text-gray-800" href="/"
              >Home</a
              >
            </li>
            <li class="mr-6">
              <a
                      class="text-gray-700 border-none hover:no-underline hover:text-gray-800"
                      href="https://github.com/zszilvai/"
