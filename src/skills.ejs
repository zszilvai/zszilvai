    <div class="w-full md:w-1/2 p-2 print-preview-full">
        <h3>Languages:</h3>
        <ul class="text-gray-900">
            <%for (language of cv.languages) {%>
            <li>
                <div class="flex flex-row flex-wrap items-center mt-2">
                    <div class="w-1/5  print-preview-full">
                        <%=language.name%>
                    </div>
                    <div class="w-4/5 print-preview-full">
                        <div class="w-full bg-transparent">
                            <div class="print-preview-lanuage-bar
                                        bg-yellow-500
                                        text-sm
                                        font-semibold
                                        text-gray-700
                                        flex
                                        items-center
                                        align-center
                                        justify-center
                                        p-0.5
                                        leading-none
                                        rounded-full" style="width: <%=language.percentage%>%">
